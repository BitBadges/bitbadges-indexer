{
  "name": "bitbadges-indexer",
  "version": "1.0.0",
  "description": "Indexer for the bitbadges blockchain",
  "main": "index.js",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --require ts-node/register 'test/**/*.ts'",
    "start": "react-app-rewired start",
    "build": "tsc --build ./src",
    "test-react": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "ren .\\build\\index.html 200.html & surge .\\build",
    "indexer-dev": "npx ts-node src/indexer.ts",
    "indexer": "node --experimental-specifier-resolution=node build/dist/indexer.js",
    "setup": "npx ts-node src/setup.ts",
    "setup-and-run": "npm run setup && npm run indexer",
    "setup-and-run-bootstrap": "npm run setup && npm run bootstrap && npm run indexer",
    "bootstrap": "npx ts-node src/bootstrap.ts"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmos/academy-checkers-ui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cosmos/academy-checkers-ui/issues"
  },
  "dependencies": {
    "@cosmjs/encoding": "^0.31.3",
    "@cosmjs/proto-signing": "^0.31.3",
    "@cosmjs/stargate": "0.31.3",
    "async-mutex": "^0.4.0",
    "aws-sdk": "^2.1488.0",
    "axios": "^1.3.3",
    "bitbadgesjs-address-converter": "^0.0.3",
    "bitbadgesjs-proto": "^0.1.162",
    "bitbadgesjs-provider": "^0.0.5",
    "bitbadgesjs-utils": "^1.1.271",
    "blockin": "^1.2.58",
    "blockin-cosmos-driver": "^1.0.3",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ethers": "^5.7.2",
    "express": "4.18.1",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "ipfs-http-client": "^56.0.2",
    "joi": "^17.7.1",
    "merkletreejs": "^0.3.9",
    "multer": "^1.4.5-lts.1",
    "nano": "^10.1.2",
    "response-time": "^2.3.2",
    "serialize-error": "^5.0.0",
    "siwe": "^2.1.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.13",
    "@types/express-session": "^1.17.6",
    "@types/multer": "^1.4.8",
    "@types/node": "18.7.5",
    "@types/response-time": "^2.3.5",
    "dotenv": "16.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.6.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}